
/**
 1. Structure to declare multiple type of data and we can't initialize it here when
 it is declared

 2. puts for print string

**/

#include <stdio.h>
#include <stdlib.h>
#include <string.h>


int main() {
    /** Suppose we want to store some information about people, each person has a name and age **/

    struct Person {
        char name[10];
        double age;
    };

    struct Person p1; /// type var_name
    p1.age = 20;

    strcpy(p1.name, "p1 name");
    puts(p1.name);

    struct Person p2;
    p2.age = 30;
    strcpy(p2.name, "p2 name");
    puts(p2.name);
    
    ///--------struct declaration with element --------------------------------------------
    struct {
        char namm[10];
        double agg;
    }p11, p22;
    ///-----------------------------------
    

    return 0;
}
